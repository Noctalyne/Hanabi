{% extends 'base.html.twig' %}

{% block title %}  {% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{asset('./rework_css/component_temp_edit.css')}}">
{% endblock %}

{% block body %}

    <div class="container bloc">

        {# {% if msg  %}
            <div class='container text-center '>
                <div class="alert alert-sm alert-success p-1">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    <strong>{{ msg2 }}</strong>
                    <p class='mb-0'> {{ msg }} </p>
                </div>
            </div> 
        {% endif %} #}

        <div class="bloc_edit">

            <div class="bloc_edit_header">
                <h1> Modifier la banniere {{ actuelBanniere.id}} </h1>
            </div>

            <div class="bloc_edit_content">

                <div class="edit_content_row">
                    <p></p>
                    <h5>Actuel</h5>
                    <h5>Nouveau</h5>
                </div>

                {{ form_start(form) }}
                {{ form_errors(form) }}            
                
                    <div class="edit_content_row">
                        <p>Nom </p>
                        <p> {{ actuelBanniere.nomBanniere }} </p>
                        {{ form_row( form.nomBanniere, {label: ' '} )}}
                    </div>

                    
                    <div class="edit_content_row">
                        <p>Première image</p>
                        <img src="{{ asset('images/banniere/' ~ actuelBanniere.premiereImage ) }}" alt="photo du produit :" ~ {{actuelBanniere.premiereImage}}>
                        {{ form_row( form.premiereImage, {label: ' '})}}
                    </div>


                    <div class="edit_content_row">
                        <p>Deuxième image</p>
                        <img src="{{ asset('images/banniere/' ~ actuelBanniere.deuxiemeImage ) }}" alt="photo du produit :" ~ {{actuelBanniere.deuxiemeImage}}>
                        {{ form_row( form.deuxiemeImage, {label: ' '})}}
                    </div>



                    <div class="edit_content_row">
                        <p>Troisième image</p>
                        <img src="{{ asset('images/banniere/' ~ actuelBanniere.troisiemeImage ) }}" alt="photo du produit :" ~ {{actuelBanniere.troisiemeImage}}>
                        {{ form_row( form.troisiemeImage, {label: ' '})}}
                    </div>


                    <div class="edit_content_footer" >

                        <button class="bloc_edit_footer">
                            <a href="{{ path('app_banniere_index') }}">Retour</a>
                        </button>                        

                        <button class="bloc_edit_footer">
                            {{ button_label|default('Enregistrer') }}
                        </button>
                    </div>           
                
                {{ form_end(form) }}

            </div>
        
        </div>

    </div>

{% endblock %}

