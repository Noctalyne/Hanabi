{% extends 'base.html.twig' %}

{% block title %}Mes formulaires{% endblock %}

{% block body %}


<div class="container bloc">

    <div class="p-1 text-center">
        <h1>Liste de mes formulaires</h1>
        <p>Vous trouverez ici la liste de tous vos fomulaires envoyés.</p>
    </div>
    

   
    <table class="table">
        <thead>
            <tr>
                <th>Type de produit</th>
                <th>* Autres :</th>
                <th>Description</th>
                <th>Date de la demande</th>
                <th>Réponse</th>
                <th>Afficher</th>
            </tr>
        </thead>
        <tbody>
        {% for form in formulaires %}
            <tr>
                <td>{{ form.type_produit }}</td>
                                
                {# <td>{{ form.autresTypes }}</td> #}
                <td class="text-break">{{ form.description_produit }}</td>
                <td>Envoyer le {{ form.date_envoie_form ? form.date_envoie_form|date('d M Y à H:i') : '' }}</td>

                {% if  form.reponse_demande is same as('attente')  %}
                    <td><p>Demande en attente </p></td>                    
                {% else %}
                    <td>{{ form.date_reponse_form ? form.date_reponse_form|date('d M Y à H:i') : ''}} </td>
                    <td>{{ form.reponse_demande }}</td>
                {% endif %}

                {# <td>{{ form.date_reponse_form ? form.date_reponse_form|date('d M Y à H:i') : '' }}</td> #}
                <td >
                    <a href="{{ path('app_formulaire_demande_produit_show', {'id': form.id}) }}">
                        <img  src="{{ asset('images/icones/voir.png') }}" alt="icone voir" style="width : 60px;">
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun formulaires trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-center">
        <button>
            <a href="{{ path('app_formulaire_demande_produit_new', {'id' : app.user.id}) }}">Faire une nouvelle demande</a>
        </button>
    </div>
        
</div>    
{% endblock %}
