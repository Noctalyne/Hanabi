{% extends 'base.html.twig' %}

{% block title %}Faire une demande{% endblock %}

{% block stylesheets %}
    {# <link rel="stylesheet" href="{{ asset('asset/style/css/account.css') }}"> #}
    <link rel="stylesheet" href="{{ asset('asset/style/css/formulaires.css') }}">
{% endblock %}

{% block body %}

    <div class="container bloc">

        <h1>Contact</h1>

        <div class="bloc_add">

            <div class="bloc_add_header">
                <h4> Faire une demande personalisé </h4>
            </div>

            {{ form_start(form) }}

                
                <div class="add_content_row">
                <div> <p>ChoisissSez le type de produit voulue :</p> </div>
                    
                    {{ form_row(form.type_produit, {label: ' '}) }}    
                </div>

                <div class="add_content_row">
                    <p>* Autres :</p>
                    {{ form_row(form.autres_types, {label: ' '}) }}
                </div>

                <div class="add_content_row">
                    <p>Veuillez préciser votre recherche :</p>
                    {{ form_row(form.description_produit, {label: ' '}) }}
                </div>

                <div class="add_content_footer">
                    <button>
                        {{ button_label|default('Enregistrer') }}
                    </button>
                </div>

            {{ form_end(form) }} 


            <div class="d-flex justify-content-center">
                <button>
                    <a href="{{ path('app_formulaire_demande_produit_show_liste', {'id': app.user.id}) }}">Retour </a>
                </button>
            </div>
        
        </div>
    </div>

{% endblock %}