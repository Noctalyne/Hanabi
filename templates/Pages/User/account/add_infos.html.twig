{% extends 'base.html.twig' %}

{% block title %}Ajouter mes informations personnels{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('asset/style/css/account.css') }}">
{% endblock %}


{% block body %}

    <div class="container bloc">
    
        <h1> Mes informations personnels </h1>

        <div class="bloc_card">

            <div class="bloc_card_header text-center">
                {# <h4>Ajouter mes informations personnels</h4> #}
                <h4>Ajouter</h4>
            </div>

            <div class="bloc_card_body">
                {{ form_errors(form) }}

                {{ form_start(form) }}

                    <div class="bloc_card_add">
                        <p>Nom : </p>
                        {# <p>{{ actuel.nom }}</p> #}
                        {{ form_row( form.nom, {label: ' '} ) }}    
                    </div>


                    <div class="bloc_card_add">
                        <p>Prénom : </p>
                        {# <p>{{ actuel.prenom }}</p> #}
                        {{ form_row( form.prenom, {label: ' '} )}}    
                    </div>


                    <div class="bloc_card_add">
                        <p>Téléphone : </p>
                        {# <p>{{ actuel.telephone }}</p> #}
                        {{ form_row( form.telephone, {label: ' '} )}}    
                    </div>

                    <div class="bloc_card_edit_footer">

                        <button>
                            <a href="{{ path('app_user_show', {'id': app.user.id }) }}">Retour</a>
                        </button>  

                        <button>
                            {{ button_label|default('Enregistrer') }}
                        </button>
                    </div>
                
                {{ form_end(form) }}

            </div>

        </div>
    
    </div>
    
{% endblock %}


