
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('asset/style/css/composants/composant_accordeon.css') }}">
{% endblock %}


<div class="accordion-item">

    <h2 class="accordion-header" id="headingThree">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
            Liste des commandes
        </button>
    </h2>

    <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionAdmin">
        
        
        <div class="accordion-body">
   
            <div class="accordion_content">
            
                <div class="accordion_row">
                    <h5>N°</h5>
                    <h5>Date</h5>
                    <h5>Produits</h5>
                    <h5>Prix total</h5>
                    <h5>Action</h5>
                </div>

                {% for commande in commandes %}
                
                    <div class="accordion_row">    
                        <p>{{ commande.id }}</p>
                        <p>{{ commande.dateCommande ? commande.dateCommande|date('d/m/Y') : '' }}</p>
                        {# <p>{{ commande.listeProduits ? commande.listeProduits|json_encode : '' }}</p> #}

                        <div class="accordion_cmd_mini">
                            {% for produit in commande.listeProduits %}
                                <img class="" src="{{ asset('images/produits/' ~ produit.2 ) }}" alt="photo du produit :" ~ {{produit.0 }} style="">
                            {% endfor %}
                        </div>
                        <p>{{ commande.prixTotal }} &#8364; </p>
                        <a href="{{ path('app_commandes_show_one', {'cmd_id': commande.id}) }}">voir</a>
                    </div> 

                {% else %}

                    <p colspan="5">Aucune commandes trouvés</p>

                {% endfor %}
                

                <div class="accordion_footer" >
                    <button class="bloc_show_footer">
                        <a href="{{ path('app_commandes_index') }}">Accéder à la liste</a>
                    </button>                        

                </div>    

            </div>
        
        </div>

    </div>


</div>
