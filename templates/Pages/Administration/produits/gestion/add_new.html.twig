{% extends 'base.html.twig' %}

{% block title %} Nouveau produit {% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{asset('asset/style/css/produit.css')}}">
{% endblock %}

{% block body %}

    <div class="container bloc">

        <div class="bloc_add">

            <div class="bloc_add_header">
                <h1>  Ajouter un nouveau produit</h1>
            </div>

            <div class="bloc_add_content">

                {{ form_start(form) }}
                {{ form_errors(form) }}
                
                    <div class="add_content_row">
                        <p>Nom du produit </p>
                        {{ form_row( form.nomProduit, {label: ' '} )}}
                    </div>

                    
                    <div class="add_content_row">
                        <p>Description</p>
                        {{ form_row( form.descriptionProduit, {label: ' '})}}
                    </div>


                    <div class="add_content_row">
                        <p>Choisir une images pour le produit </p>
                        {{ form_row( form.imgProduit, {label: ' '})}}
                    </div>


                    <div class="add_content_row">
                        <p>Prix </p>
                        {{ form_row( form.prixProduit, {label: ' '})}}
                    </div>


                    <div class="add_content_row">
                        <p>Quantit√© en stock</p>
                        {{ form_row( form.quantStock, {label: ' '})}}
                    </div>



                    <div class="add_content_footer" >

                        <button class="bloc_add_footer">
                            <a href="{{ path('app_banniere_index') }}">Retour</a>
                        </button>                        

                        <button class="bloc_add_footer">
                            {{ button_label|default('Enregistrer') }}
                        </button>
                    </div>         
                
                {{ form_end(form) }}


            </div>

        
        </div>

    </div>


{% endblock %}

