{% extends 'base.html.twig' %}

{% block title %}Ajouter mes informations personnelles{% endblock %}

{% block body %}
    {# <h1>Créer mon profil client</h1> #}
    {# {{ include('clients/_form.html.twig') }} #}
    {# <a href="{{ path('app_clients_index') }}">back to list</a> #}

<div class="container w-75 d-flex flex-column pt-3 pb-3">

    <h3>Créer mon profil client</h3>

    <div class="container w-75 mt-4 mb-2 pt-3 pb-2 border rounded  shadow-sm">

        <div class="d-flex flex-row justify-content-between">

            <div class="d-flex align-items-center text-center p-2">
                <h4> Mes information de connexion </h4>
            </div>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Email : </th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Username</th>
                        <td>{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th>Password</th>
                        {# <td>{{ user.password }}</td> #}
                        <td>**********</td>
                    </tr>
                </tbody>
            </table>
            
        </div>
    </div>


    <div class="container w-75 mt-4 mb-4 pt-3 pb-3 border rounded  shadow-sm">
        <div class="d-flex flex-row justify-content-between">
            
            <div class="d-flex align-items-center text-center p-2">
                <h4> Mes information personnels </h4>
            </div>

            {{ form_errors(form) }}

            {{ form_start(form) }}
        
                <table class="table">
                        <tbody>
                            <tr >
                                <th>Nom: </th>
                                <th>{{ form_row( form.nom, {label: ' '} ) }}</th> 
                            </tr>
                            <tr>
                                <th>Prénom</th>
                                <th>{{ form_row( form.prenom, {label: ' '} )}}</th>
                            </tr>
                            <tr>
                                <th>téléphone</th>
                                <th>{{ form_row( form.telephone, {label: ' '} )}}</th>
                            </tr>
                        </tbody>
                </table>
                <div class="d-flex justify-content-end">
                    <button class="btn btn-outline-secondary">{{ button_label|default('Enregistrer') }}</button>
                </div>
                
            {{ form_end(form) }}
        </div>
    </div>




    <div class="d-flex flex-row justify-content-around">

        {# MODIFIER VERS LIENS DE SUPPRESSION + ajout méthode pour activer/desact compte  #}
        {#     {{ include('user/_delete_form.html.twig') }} #}

        <button class="btn btn-sm btn-outline-dark p-1" >
        <a class="btn p-0" href="{{ path('app_clients_show', {'user_id': app.user.id }) }}">Retour</a>
        </button>  
    </div>

</div>
{% endblock %}
