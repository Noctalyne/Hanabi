{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

<div class="container w-75 d-flex flex-column pt-3 pb-3">

    <h3>Mon compte</h3>

    {# Infos de connexion #}
    <div class="container w-75 mt-4 mb-3 pt-3 pb-3 border rounded  shadow-sm">

        <div class="d-flex flex-row justify-content-between">
            <h4> Mes information de connexion </h4>
            <button class="btn btn-sm btn-outline-dark p-1" >
                <a class="btn p-0" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
            </button> 
        </div>

        <table class="table">
            <tbody>
                <tr>
                    <th>Email : </th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    {# <td>{{ user.password }}</td> #}
                    <td>**********</td>
                </tr>
            </tbody>
        </table>
        
        <div class="d-flex justify-content-end">

        </div>
    </div>


    <div class="container w-75 mt-4 mb-4 pt-3 pb-3 border rounded  shadow-sm">

        <div class="d-flex flex-row justify-content-between">
            <h4> Mes information personnels : </h4>
        </div>

        <div class="d-flex justify-content-center">
            <button>
                {# <a class="btn p-0" href="{{ path('app_user_create_client' , {'user_id': app.user.id }) }}">Ajouter mes infos perso</a> #}
                
                <a class="btn p-0" href="{{ path('app_user_add_infos' , {'id': app.user.id }) }}">Ajouter mes infos personnels</a>
            </button>
        </div>
    </div>

    <div class="container w-75 mt-4 mb-4 pt-3 pb-3 border rounded  shadow-sm">
        <div class="d-flex flex-row justify-content-between">
        
            <div class="d-flex align-items-center text-center p-2">
                <h4> Mes adresse: </h4>
            </div>

            {# VOIR POUR MODIFIER #}
            <button>
                <a class="btn p-0" href="{{ path('app_adresses_new' , {'id': app.user.id }) }}">
                    Ajouter une adresse
                </a>
            </button>

            {# {{ path('app_user_add_infos' , {'id': app.user.id }) }} #}

            <div class="d-flex flex-row"> {# Mettre des CARDS ici pour afficher les addresse via leur nom #}

            {% for adresse in adresses %}
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Num_adrss</th>
                            <td>{{ adresse.num_adrss }}</td>
                        </tr>
                        <tr>
                            <th>Rue_adrss</th>
                            <td>{{ adresse.rue_adrss }}</td>
                        </tr>
                        <tr>
                            <th>Complement_adrss</th>
                            <td>{{ adresse.complement_adrss }}</td>
                        </tr>
                        <tr>
                            <th>Ville_adrss</th>
                            <td>{{ adresse.ville_adrss }}</td>
                        </tr>
                        <tr>
                            <th>CodePostal_adrss</th>
                            <td>{{ adresse.code_postal_adrss }}</td>
                        </tr>
                        <tr>
                            <th>Pays_adrss</th>
                            <td>{{ adresse.pays_adrss }}</td>
                        </tr>
                    </tbody>
                </table>               

            {% endfor %}

            </div>
        </div>

    </div>



  <div class="d-flex flex-row justify-content-around">
  
    {# Modifier le booléen de la validation d inscription #}
    {# <button class="btn btn-sm btn-outline-dark p-1" >
      <a class="btn p-0" href="{{ path('app_accueil') }}">Désactiver le compte</a>  
    </button>   #}

    <button class="btn btn-sm btn-outline-dark p-1" >
      <a class="btn p-0" href="{{ path('app_accueil') }}">Retour</a>
    </button>  
  </div>

</div>


{% endblock %}
