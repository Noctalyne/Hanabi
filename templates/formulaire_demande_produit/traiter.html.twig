{% extends 'base.html.twig' %}

{% block title %}Traiter la demande{% endblock %}

{% block body %}

<div class="container">
    <h1>Traiter la demande</h1>

    {# {{ include('formulaire_demande_produit/_form.html.twig', {'button_label': 'Appliquer modification'}) }} #}


    {# {{ formulaire_demande_produit.typeProduit }}
    {{ formulaire_demande_produit.autresTypes }}
    {{ formulaire_demande_produit.descriptionProduit }} #}
    <table class="table">
        <tbody>

            <tr>
                <th>Type de produit :</th>
                <td>{{ formulaire_demande_produit.typeProduit }}</td>
            </tr>
            <tr>
                <th>* Autres :</th>
                <td>{{ formulaire_demande_produit.autresTypes }}</td>
            </tr>
            <tr>
                <th>Description envoyée :</th>
                <td class="d-inline-block text-truncate">{{ formulaire_demande_produit.descriptionProduit }}</td>
                {# <td>{{ description }}</td> #}
            </tr>
            <tr>
                <th>Date d'envoie de la demande :</th>
                <td>{{ formulaire_demande_produit.dateEnvoieForm ? formulaire_demande_produit.dateEnvoieForm|date('d M Y à H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Réponse du vendeur :</th>{# permet d'afficher le état de la demande  #}
                    <td>
                    {% if  formulaire_demande_produit.reponseDemande is same as('attente')  %}
                        Demande en attente   
                    {% else %}
                        {{ formulaire_demande_produit.reponseDemande ? 'Accepter' : 'Refuser' }}
                        le {{ formulaire_demande_produit.dateReponseForm ? formulaire_demande_produit.dateReponseForm|date('d M Y à H:i') : '' }}
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>


    {{ form_errors(form) }}

    {{ form_start(form) }}
   
        {{ form_row(form.reponseDemande, {
            label: 'Réponse du vendeur :'
        }) }} 

        <button class="btn btn-outline-secondary">{{ button_label|default('Enregistrer') }}</button>

    {{ form_end(form) }}
</div>
    {# <a href="{{ path('app_formulaire_demande_produit_index') }}">Retour à la liste</a> #}

{% endblock %}
