{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse{% endblock %}

{% block stylesheets %}
    {# <link rel="stylesheet" href="{{ asset('./rework_css/adresses.css') }}"> #}
    <link rel="stylesheet" href="{{ asset('./rework_css/account.css') }}">
{% endblock %}


{% block body %}

    <div class="container bloc">

        {% if msg != "" %}
            <div class='container text-center'>
                <div class="alert alert-dismissible alert-danger">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    <strong>{{ msg }}</strong>
                </div>
            </div>    
        {% endif %}    



        {# Bloquer sur la page du compte user à 3 donv peut être inutile ici

            {% if limite < 3 %}
                {{ include('adresses/_form.html.twig') }}
            {% endif %}
        #}

        <div class="bloc_card">

            <div class="bloc_card_header">
                <h4> Ajouter une adresse </h4>      
            </div>

            {{ form_start(form) }}

                <div class="bloc_card_add">
                    <p>Numéros</p>
                    {# {{ form_widget( form.numAdrss ) }}    #}
                    {{ form_row( form.numAdrss, {label: ' '} ) }}  
                </div>

                
                <div class="bloc_card_add">
                    <p>Rue</p>
                    {# {{ form_widget( form.rueAdrss ) }} #}
                    {{ form_row( form.rueAdrss, {label: ' '} ) }}
                </div>

                
                <div class="bloc_card_add">
                    <p>
                        Complément d'addresse <br>
                        <small>(Résidence, Batiment, Appartement)</small>
                    </p>                    
                    {# {{ form_widget( form.complementAdrss ) }}  #}
                    {{ form_row( form.complementAdrss, {label: ' '} ) }}
                </div>

                
                <div class="bloc_card_add">
                    <p>Ville</p>
                    {# {{ form_widget( form.villeAdrss ) }} #}
                    {{ form_row( form.villeAdrss, {label: ' '} ) }}
                </div>

                
                <div class="bloc_card_add">
                    <p>Code postal</p>
                    {# {{ form_widget( form.codePostalAdrss ) }}  #}
                    {{ form_row( form.codePostalAdrss, {label: ' '} ) }}
                </div>

                <div class="bloc_card_add">
                    <p>Pays</p>
                    {# {{ form_widget( form.paysAdrss ) }} #}
                    {{ form_row( form.paysAdrss, {label: ' '} ) }} 
                </div>

                
                <button>
                    {{ button_label|default('Enregistrer') }}
                </button>            
            
            {{ form_end(form) }}

        
        </div>

        <button>
            <a href="{{ path('app_user_show', {'id': app.user.id }) }}">Retour</a>
        </button>  

    </div>


{% endblock %}
