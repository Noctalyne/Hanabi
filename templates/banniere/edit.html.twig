{% extends 'base.html.twig' %}

{% block title %}Modifier la bannière{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{asset('./rework_css/account.css')}}">
{% endblock %}


{% block body %}


    <div class="container bloc">

        {# {% if msg  %}
            <div class='container text-center '>
                <div class="alert alert-sm alert-success p-1">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    <strong>{{ msg2 }}</strong>
                    <p class='mb-0'> {{ msg }} </p>
                </div>
            </div> 
        {% endif %}
        {{ include('components/bannieres/_delete_ban.html.twig') }} #}

        <h1>Modifier la bannière</h1>

        <div class="bloc_card">

            <div class="bloc_card_header">
                <h4>Banniere {{ actuelBanniere.id}} </h4>      
            </div>

            {{ form_start(form) }}
            {{ form_errors(form) }}

                <div class="bloc_card_add">
                    <p></p>

                </div>

                
                {# <div class="bloc_card_add">
                    <p>Rue</p>
                    {{ form_row( form.rueAdrss, {label: ' '} ) }}
                </div> #}

                
                <div class="bloc_card_add">
                    <p>Nom :</p>
                    <p> {{ actuelBanniere.nomBanniere }} </p>
                    {{ form_row( form.nomBanniere, {label: ' '} )}}
                </div>


                <div class="bloc_card_add">
                    <p>1</p>
                    <img src="{{ asset('images/banniere/' ~ actuelBanniere.premiereImage ) }}" alt="photo du produit :" ~ {{actuelBanniere.premiereImage}} style="height : 15%; width : 15%;">
                    {{ form_row( form.premiereImage, {label: ' '})}}
                </div>


                <div class="bloc_card_add">
                    <p>2</p>
                    <img src="{{ asset('images/banniere/' ~ actuelBanniere.deuxiemeImage ) }}" alt="photo du produit :" ~ {{actuelBanniere.deuxiemeImage}} style="height : 15%; width : 15%;">
                    {{ form_row( form.deuxiemeImage, {label: ' '})}}
                </div>



                <div class="bloc_card_add">
                    <p>3</p>
                    <img src="{{ asset('images/banniere/' ~ actuelBanniere.troisiemeImage ) }}" alt="photo du produit :" ~ {{actuelBanniere.troisiemeImage}} style="height : 15%; width : 15%;">
                    {{ form_row( form.troisiemeImage, {label: ' '})}}
                </div>

                <div class="bloc_card_edit_footer">
                    <button>
                        {{ button_label|default('Enregistrer') }}
                    </button>
                </div>         
            
            {{ form_end(form) }}

            
            <button>
                <a href="{{ path('app_banniere_index') }}">Retour</a>
            </button>
    </div>


    

    


        <div class='d-flex flex-row justify-content-center '>
            

        </div>

    </div>




{% endblock %}
