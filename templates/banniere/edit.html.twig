{% extends 'base.html.twig' %}

{% block title %}Modifier la bannière{% endblock %}

{% block body %}
    <h1>Modifier la bannière</h1>

    <div class="container w-75 mt-4 mb-4 pt-3 pb-3 border rounded  shadow-sm">
        {% if msg  %}
            <div class='container text-center '>
                <div class="alert alert-sm alert-success p-1">
                    {# <button type="button" class="btn-close" data-bs-dismiss="alert"></button> #}
                    <strong>{{ msg2 }}</strong>
                    <p class='mb-0'> {{ msg }} </p>
                </div>
            </div> 
        {% endif %}
        {{ include('banniere/_delete_form.html.twig') }}


        <div class="d-flex flex-row justify-content-between">
            
            <div class="d-flex flex-column justify-content-between align-items-center text-center p-2">

                    <h4>Banniere {{ actuelBanniere.id}} </h4>


                
                

            </div>

            {# Affiche le formulaire #}
            <div class="d-flex flex-column p-2 w-75" >
                {{ form_errors(form) }}

                {{ form_start(form) }}

                <div class='d-flex flex-row justify-content-between p-1'>
                    <th>Nom : </th>
                    {# <th>{{ actuelBanniere.nomBanniere }}</th> #}
                    <p class='mb-0'> {{ actuelBanniere.nomBanniere }} </p>
                    <td>{{ form_row( form.nomBanniere, {label: ' '} )}}</td> {# #}
                </div>

                <div class='d-flex flex-row align-items-center justify-content-between p-1'>
                    <th>1</th>
                    <th><img src="{{ asset('images/banniere/' ~ actuelBanniere.premiereImage ) }}" alt="photo du produit :" ~ {{actuelBanniere.premiereImage}} style="height : 15%; width : 15%;"></th>
                    <td>{{ form_row( form.premiereImage, {label: ' '})}}</td> {# #}
                </div>

                <div class='d-flex flex-row align-items-center justify-content-between p-1'>
                    <th>2</th>
                    <th><img src="{{ asset('images/banniere/' ~ actuelBanniere.deuxiemeImage ) }}" alt="photo du produit :" ~ {{actuelBanniere.deuxiemeImage}} style="height : 15%; width : 15%;"></th>
                    <td>{{ form_row( form.deuxiemeImage, {label: ' '})}}</td> {# #}
                </div>

                <div class='d-flex flex-row align-items-center justify-content-between p-1'>
                    <th>3</th>
                    <th><img src="{{ asset('images/banniere/' ~ actuelBanniere.troisiemeImage ) }}" alt="photo du produit :" ~ {{actuelBanniere.troisiemeImage}} style="height : 15%; width : 15%;"></th>
                    <td>{{ form_row( form.troisiemeImage, {label: ' '})}}</td> {# #}
                </div>
            
                <div class="d-flex justify-content-end mt-3 me-3">
                    <button class="btn btn-outline-secondary p-1">{{ button_label|default('Enregistrer') }}</button>
                </div>
                
                {{ form_end(form) }}
            </div>

        </div>


        <div class='d-flex flex-row justify-content-center '>
            
            <button class="btn btn-outline-secondary p-1">
                <a class="text-decoration-none text-secondary " href="{{ path('app_banniere_index') }}">Retour</a>
            </button>
        </div>

    </div>




{% endblock %}
